<div id="artcontent">

<h4> <%= @article.created_at %> </h4>

<h1> <%= @article.title %> </h1>
<h2> <%= @article.author %> <br /> 
    <span style="opacity:0.77;"><%= @article.school %></span>
</h2>

<div id="taglines">
    <% @article.tags.each do |tag| %>
        <div id="chaquets">
            <%= link_to tag.name, tag_path(tag), class: 'eachts' %>
        </div>
    <% end %>
</div>

<p><%= simple_format(@article.body) %></p>
<div id="spacer"></div>
<div id="spacer"></div>

<% if logged_in? %>
    <%= link_to "edit", edit_article_path(@article) %>
    <%= link_to "delete", article_path(@article), method: :delete, data: {confirm: "Really delete the article?"}%>
<% end %>

<h3>Comments (<%= @article.comments.size %>) </h3>
<div style="display:block;">
<%= render partial: 'articles/comment', collection: @article.comments.reverse %>
</div>
<%= render partial: 'comments/form' %>



</div>