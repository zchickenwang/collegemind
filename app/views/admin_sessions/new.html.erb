<div id="about">

<h1>Login</h1>

<h3>
<%= form_tag admin_sessions_path, method: :post do %>
  <div class="field">
    <%= label_tag :email %>
    <br />
    <%= text_field_tag :email %>
    <br/>
    <br />
  </div>
  <div class="field">
    <%= label_tag :password %>
    <br />
    <%= password_field_tag :password %>
    <br/>
    <br />
  </div>
  <div class="actions">
    <%= submit_tag "Login" %>
    <br />
    <br />
  </div>
<% end %>

</h3>

</div>